<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#efeff4"
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/btn_dathang_355"
        android:background="#efeff4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".GioHangActivity">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_giohang_355"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/icon_back"
                    android:drawableLeft="@drawable/ic_baseline_clear_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:text="Giỏ hàng của bạn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal" />
            </androidx.appcompat.widget.Toolbar>
            <View

                android:layout_below="@+id/toolbar_giohang_355"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/title_01"
                android:layout_below="@+id/toolbar_giohang_355"
                android:background="#efeff4"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="Thông tin đơn hàng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/thongtin_355"
                android:background="#fff"
                android:padding="10dp"
                android:layout_below="@+id/title_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/tab_ten_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/sdt_355"
                        android:textSize="14sp"
                        android:hint="   Họ và tên"
                        android:id="@+id/hovaten_355"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:hint="   Số điện thoại"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:id="@+id/sdt_355"
                        android:drawableLeft="@drawable/ic_phone_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_below="@id/tab_ten_sdt"
                    android:id="@+id/tab_line_ten_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="#000"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                    <View
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:background="#000"
                        android:layout_width="match_parent"
                        android:layout_height="1px"></View>
                </LinearLayout>
                <RelativeLayout
                    android:layout_below="@+id/tab_ten_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:padding="5dp"
                        android:layout_toLeftOf="@id/btn_thaydoi_355"
                        android:id="@+id/address_355"
                        android:textColor="#000"
                        android:text="Bạn chưa chọn địa chỉ"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="16sp"
                        android:id="@+id/btn_thaydoi_355"
                        android:padding="10dp"
                        android:text="Thay Đổi"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:layout_above="@+id/line1"
                        android:textSize="14sp"
                        android:hint="Thêm ghi chú cho tài xế"
                        android:padding="5dp"
                        android:id="@+id/ghichu_355"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_resource_new"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:id="@+id/line1"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="30dp"
                        android:background="#757575"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/title_02"
                android:layout_below="@+id/thongtin_355"
                android:background="#efeff4"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="Thời gian nhận hàng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:padding="5dp"
                android:background="#fff"
                android:id="@+id/timer_355"
                android:layout_below="@+id/title_02"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/icon_left_3"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_calendar__1_"
                    android:padding="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    android:id="@+id/title_05"
                    android:layout_toRightOf="@id/icon_left_3"
                    android:text="Hẹn giờ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@+id/title_05"
                    android:layout_toRightOf="@id/icon_left_3"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:text="Trong 15-30 phút"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:id="@+id/title_03"
                android:layout_below="@+id/timer_355"
                android:background="#efeff4"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="Chi tiết đơn hàng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/title_03"
                android:id="@+id/rcv_chitietdonhang_355"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/line2"
                android:layout_below="@+id/rcv_chitietdonhang_355"
                android:background="#BCBCBC"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:background="#fff"
                android:layout_marginTop="1dp"
                android:id="@+id/tongtien_355"
                android:layout_below="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/title_04"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="Tạm tính"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/thanhtien_giohang_355"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:text="970.000 đ"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:layout_below="@+id/title_04"
                    android:text="Phí giao hàng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:layout_below="@+id/thanhtien_giohang_355"
                    android:text="Miễn phí"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:id="@+id/line4"
                android:layout_below="@+id/tongtien_355"
                android:background="#BCBCBC"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <RelativeLayout
                android:background="#fff"
                android:id="@+id/tongthanhtien_355"
                android:layout_below="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/value_tongtien"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:text="970.000 đ"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:textColor="#000"
                    android:text="Tổng cộng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/btn_dathang_355"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_margin="5dp"
            android:padding="5dp"
            android:background="@drawable/btnthem"
            android:id="@+id/tongtien_02_355"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:text="Đặt hàng - 915.000 đ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />
    </RelativeLayout>
</RelativeLayout>
