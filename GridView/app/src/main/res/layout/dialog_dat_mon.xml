<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/image_ctsp_355"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/name_ctsp_355"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:text="Cà phê lúa Mạch đá"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_below="@id/name_ctsp_355"
                    android:id="@+id/gia_ctsp_355"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:text="69.000 đ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_below="@id/name_ctsp_355"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:id="@+id/btn_minus_ctsp_355"
                        android:textColor="#424242"
                        android:fontFamily="sans-serif-thin"
                        android:text="-"
                        android:background="@drawable/btntru"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:layout_toRightOf="@id/btn_minus_ctsp_355"
                        android:id="@+id/soluong_355"
                        android:text="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/soluong_355"
                        android:id="@+id/btn_add_ctsp_355"
                        android:textColor="#fff"
                        android:fontFamily="sans-serif-thin"
                        android:text="+"
                        android:background="@drawable/btnthem"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="#000"
                android:id="@+id/tongtien"
                android:text="44,000đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/btnthemgiohang"
                android:layout_marginRight="10dp"
                android:fontFamily="sans-serif-light"
                android:textColor="#FF0000"
                android:textAllCaps="false"
                android:text="Thêm vào giỏ hàng"
                android:layout_alignParentRight="true"
                android:id="@+id/themmon_355"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>
        </RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>